        <menuitem
            id="menu_action_custody_settlement_root"
            name="Custody Settlements"
            web_icon="custody_settlement,static/description/custody.png"
            groups="custody_settlement.group_custody_manager,custody_settlement.group_custody_user"
            sequence="75"/>
        <menuitem
            id="menu_action_custody_settlement_main"
            name="Custody Settlements"
            action="action_move_in_invoice_settlement"
            groups="custody_settlement.group_custody_manager,custody_settlement.group_custody_user"
            parent="custody_settlement.menu_action_custody_settlement_root"
            sequence="10"/>

        <menuitem id="assign_employee_pos_menu"
                  name="Assign Employee Pos"
                  action="custody_settlement.assign_employee_pos_action"
                  parent="custody_settlement.menu_action_custody_settlement_root"
                  groups="custody_settlement.group_custody_manager,custody_settlement.group_custody_user"
                  sequence="20"/>

    </data>
