<?xml version="1.0"?>
<odoo>
    <!--
        religion.religion views
    -->
    <record id="religion_view_form" model="ir.ui.view">
        <field name="name">religion.view.form</field>
        <field name="model">religion.religion</field>
        <field name="arch" type="xml">
            <form string="Religions">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="religion_view_tree" model="ir.ui.view">
        <field name="name">religion.view.tree</field>
        <field name="model">religion.religion</field>
        <field name="arch" type="xml">
            <tree string="Religions">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Religions Configuration -->
    <record id="religion_action" model="ir.actions.act_window">
        <field name="name">Religions</field>
        <field name="res_model">religion.religion</field>
        <field name="view_id" ref="religion_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new religion
            </p>
        </field>
    </record>
    <menuitem
            id="menu_religion_config"
            name="Religions"
            parent="hr.menu_human_resources_configuration"
            action="hr_custom.religion_action"
            sequence="100"/>

</odoo>
