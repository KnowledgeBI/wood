<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="employee_document_form_view" model="ir.ui.view">
            <field name="name">hr.employee.document.form</field>
            <field name="model">hr.employee.document</field>
            <field name="inherit_id" ref="oh_employee_documents_expiry.employee_document_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="employee_document_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.document.tree</field>
            <field name="model">hr.employee.document</field>
            <field name="inherit_id" ref="oh_employee_documents_expiry.employee_document_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="before">
                    <field name="employee_ref"/>
                </xpath>

            </field>
        </record>

        <record id="search_employee_documents" model="ir.ui.view">
            <field name="name">hr.employee.document.search</field>
            <field name="model">hr.employee.document</field>
            <field name="inherit_id" ref="oh_employee_documents_expiry.search_employee_documents"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='Employee']" position="before">
                    <field name="name"/>
                    <field name="employee_ref"/>
                </xpath>
                <xpath expr="//filter[@name='Employee']" position="after">
                    <group string='Group By'>
                        <filter name='by_employee' string='Employee' context="{'group_by': 'employee_ref'}"/>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="employee_document_window_action" model="ir.actions.act_window">
            <field name="name">Employee Document</field>
            <field name="res_model">hr.employee.document</field>
            <field name="view_mode">tree,form,search</field>
            <field name="target">current</field>
        </record>

        <menuitem id="employee_document_menu"
                  name="Employee Document"
                  parent="hr.menu_hr_reporting_timesheet"
                  action="employee_document_window_action"
                  sequence="3"/>

    </data>
</odoo>