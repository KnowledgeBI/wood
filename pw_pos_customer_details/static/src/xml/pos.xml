<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
    <xpath expr="//div[hasclass('cashier')]" position="after">
        <t t-if="receipt.client and props.order.pos.config.enable_customer_info">
            <br/>
            <div style="text-align: left">
                <strong>Customer: </strong><span t-esc="receipt.client.name"/><br/>
                <strong>Phone: </strong><span t-esc="receipt.client.phone or ''"/><br/>
                <t t-if="receipt.client.street">
                    <span t-esc="receipt.client.street or ''"/>
                </t>
                <t t-if="receipt.client.zip">
                    , <span t-esc="receipt.client.zip or ''"/>
                </t>
                <t t-if="receipt.client.city">
                    , <span t-esc="receipt.client.city or ''"/>
                </t>
                <t t-if="receipt.client.state_id">
                    , <span t-esc="receipt.client.state_id[1] or ''"/>
                </t>
                <t t-if="receipt.client.country_id">
                    <br/><span t-esc="receipt.client.country_id[1] or ''"/>
                </t>
            </div>
        </t>
    </xpath>    
</t>
</templates>
