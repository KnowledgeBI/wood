        <!-- Inherit Form View to Modify it -->
        <record id="view_employee_filter" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="barcode"/>
                    <field name="identification_id"/>
                </xpath>

            </field>
        </record>

        <record id="employee_insurance_view_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="full_insurance_id"/>
                    <field name="social_insurance_id"/>
                    <field name="social_insurance_type_id"/>
                    <field name="actual_social_insurance_amount"/>
                </tree>
            </field>
        </record>

        <record id="employee_insurance_action" model="ir.actions.act_window">
            <field name="name">Employees Insurance</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form,search</field>
            <field name="context">{}</field>
            <field name="view_id" eval="employee_insurance_view_tree"/>
        </record>

        <menuitem id="insurance_report_menu"
                  name="Insurance Report"
                  parent="hr.menu_hr_reporting_timesheet"
                  action="employee_insurance_action"
                  sequence="20"/>

    </data>
