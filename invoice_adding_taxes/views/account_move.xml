<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form2" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="tax_ids"
                           widget="many2many_tags"
                           domain="[('type_tax_use','=',invoice_filter_type_domain)]"
                           attrs="{
                            'readonly':[('state','in',('approved','purchase','done','cancel'))],
                            'invisible':[('move_type','=','entry')],
                           }"/>
                </xpath>

<!--                <xpath expr="//field[@name='invoice_line_ids']" position="attributes">-->
<!--                    <attribute name="context">{-->
<!--                        'default_move_type': context.get('default_move_type'),-->
<!--                        'journal_id': journal_id,-->
<!--                        'default_partner_id': commercial_partner_id,-->
<!--                        'default_currency_id':currency_id or company_currency_id,-->
<!--                        'default_tax_ids':tax_ids,-->
<!--                        }-->
<!--                    </attribute>-->
<!--                </xpath>-->

                <xpath expr="//header" position="inside">
                    <button type="object"
                            name="action_set_taxes"
                            string="Set Taxes"
                            attrs="{'invisible':[('state','!=','draft')]}"
                    />
                </xpath>

            </field>
        </record>

    </data>
</odoo>
