<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="tax_ids" widget="many2many_tags" domain="[('type_tax_use','=','purchase')]"
                           attrs="{'readonly':[('state','in',('approved','purchase','done','cancel'))]}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="context">{'default_taxes_id':tax_ids}</attribute>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button type="object"
                            name="action_set_taxes"
                            string="Set Taxes"
                            attrs="{'invisible':[('state','in',['approved','done'])]}"
                    />
                </xpath>

            </field>
        </record>

    </data>
</odoo>
