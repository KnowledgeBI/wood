<data>
    <record id="trial_balance_form" model="ir.ui.view">
        <field name="name">trial.balance.form</field>
        <field name="model">trial.balance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="analytic_account_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="date_to" required="1"/>
                            <field name="target_move" widget="radio"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_excel_file" string="Export Report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="trial_balance_action" model="ir.actions.act_window">
        <field name="name">Trial Balance</field>
        <field name="res_model">trial.balance</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>

    <menuitem id="trial_balance_menu"
              parent="account.menu_finance_reports"
              sequence="5"
              name="Trial Balance Report"
              action="trial_balance_action" />

</data>