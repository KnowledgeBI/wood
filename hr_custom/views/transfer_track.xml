<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="transfer_track_view_form" model="ir.ui.view">
            <field name="name">transfer.track.form</field>
            <field name="model">transfer.track</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="job_id"
                                       options="{'no_create_edit':True,'no_open':True,'no_quick_create':True}"/>
                                <field name="employee_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirm" special="save" class="oe_highlight"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="transfer_track_view_tree" model="ir.ui.view">
            <field name="name">transfer.track.tree</field>
            <field name="model">transfer.track</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="date"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id='transfer_track_view_search' model='ir.ui.view'>
            <field name='name'>transfer.track.search</field>
            <field name='model'>transfer.track</field>
            <field name='arch' type='xml'>
                <search string=''>
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <group string='Group By'>
                        <filter name='by_employee' string='Employee' context="{'group_by': 'employee_id'}"/>
                        <filter name='by_job' string='Job' context="{'group_by': 'job_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="transfer_track_window_action" model="ir.actions.act_window">
            <field name="name">Transfer Tracking</field>
            <field name="res_model">transfer.track</field>
            <field name="view_mode">tree,form,search</field>
            <field name="target">current</field>
        </record>

        <record id="transfer_track_wizard" model="ir.actions.act_window">
            <field name="name">Transfer Tracking</field>
            <field name="res_model">transfer.track</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="transfer_tracking_menu"
                  name="Employee Transfer Tracking"
                  parent="hr.menu_hr_reporting_timesheet"
                  action="transfer_track_window_action"
                  sequence="10"/>

    </data>
</odoo>